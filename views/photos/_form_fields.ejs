<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= photo.title %>">
</div>
<div>
    <label>User</label>
    <select name="user">
    <% users.forEach(user => { %>
        <% if (user.id === photo.user) { %> 
            <option selected label="<%= user.name %>" value="<%= user.id %>"></option>
        <% } else { %> 
            <option selected label="<%= user.name %>" value="<%= user.id %>"></option>
        <% } %>
    <% }) %>
</select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate" value="<%= photo.publishDate == null ? '' : photo.publishDate.toISOString().split('T')[0]%>">
</div>
<div>
    <label>Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= photo.pageCount %>">
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= photo.description %> </textarea>
</div>